<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbg"
    android:orientation="vertical"
    android:paddingTop="200dp"
    tools:context="com.dylondiruscio.fhv1.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtEmailLogin"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/usernamebg1"
            android:gravity="center"
            android:fontFamily="@font/typo_round_light_demo"
            android:hint="username"
            android:padding="6dp"
            android:textColorHint="#989898"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/txtPwd"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:fontFamily="@font/typo_round_light_demo"
            android:layout_marginTop="10dp"
            android:background="@drawable/passwordbg"
            android:ems="10"
            android:gravity="center"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="6dp"
            android:textColorHint="#989898"
            android:textSize="22sp" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="185dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_btn"
            android:fontFamily="@font/typo_round_light_demo"
            android:hint="log in"
            android:onClick="login"
            android:textColorHint="#333b48"
            android:textSize="22sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="182dp"
                android:layout_marginTop="10dp"
                android:text="or"
                android:fontFamily="@font/typo_round_light_demo"
                android:textColor="#989898"
                android:textSize="22sp"
                android:id="@+id/textView"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/orbars"
                android:layout_marginTop="17dp"/>


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="210dp"
                app:srcCompat="@drawable/orbars"
                android:layout_marginTop="17dp"/>


        </RelativeLayout>




    </LinearLayout>

    <Button
        android:id="@+id/twitterBtn"
        android:background="@drawable/twitter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginStart="50dp"
        android:layout_marginTop="210dp"/>

    <Button
        android:id="@+id/facebookBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/facebook"
        android:layout_alignBottom="@id/twitterBtn"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/googleBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/google"
        android:layout_alignBottom="@id/twitterBtn"
        android:layout_toRightOf="@id/facebookBtn"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/facebookBtn"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/typo_round_light_demo"
        android:text="Don't have an account?"
        android:textColor="#989898"
        android:textSize="14sp"
        android:id="@+id/dontHaveAnAccount"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUp"
        android:textColor="#0ecfbf"
        android:textSize="14sp"
        android:text="Sign Up"
        android:layout_centerInParent="true"
        android:fontFamily="@font/typo_round_regular_demo"
        android:layout_below="@id/dontHaveAnAccount"
        android:onClick="signUpBtn"

        />

</RelativeLayout>
